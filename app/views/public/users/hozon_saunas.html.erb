<div class="container" style="height: 500px">
  <div class="row">
    <div class="col-md-3 offset-md-1 mb-3">
      <h3><%= @user.nickname %>の保存済み一覧(全<%= @bookmarks.count %>件)</h3>
    </div>
  </div>
  <div class="row">
      <% @bookmarks.each do |bookmark| %>
        <div class="col-md-6">
          <%= link_to sauna_path(bookmark.sauna) do %>
            <% if bookmark.sauna.store_image.attached? %>
              <%= image_tag bookmark.sauna.store_image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-6">
          <div>
            <%= link_to sauna_path(bookmark.sauna) do %>
              <%= bookmark.sauna.store_name %>
            <% end %>
          </div>
          <% @average = 0 %>
          <% bookmark.sauna.reviews.each do |review| %>
            <% @average += (review.score / bookmark.sauna.reviews.count) %>
          <% end %>
          <div class="row">
            <div id="score-rate<%= bookmark.sauna.id%>">
              <script>
              $(document).on('turbolinks:load', function () {
                $('#score-rate<%= bookmark.sauna.id %>').empty();
                $('#score-rate<%= bookmark.sauna.id %>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  starHalf  : '<%= asset_path('star-half.png') %>',
                  half      : true,
                  readOnly: true,
                  score: <%= @average.round(1) %>,
                });
              });
              </script>
            </div>(<%= @average.round(1) %>点)
          </div>
          <div><%= bookmark.sauna.address %></div>
          <div><%= bookmark.sauna.business_hours %></div>
        </div>
      <% end %>
  </div>
</div>
