<div class="container">
  <div class="row">
  <div class="col-md-1"></div>
  <h3>会員情報編集</h3>
  </div>

  <div class="row">
    <div class="col-md-12">
    <%= form_with model: @user,url: user_path(current_user) do |f| %>
      <table>
        <tr>
          <td>ニックネーム</td>
          <td><%= f.text_field :nickname %></td>
        </tr>
        <tr>
          <td>性別</td>
          <td>
            <%= f.label :性別 %><br />
            <%= f.radio_button :gender, :male, checked: true %>
            <%= f.label :gender, "男性", {value: :男性, style: "display: inline-block;"} %>
            <%= f.radio_button :gender, :female %>
            <%= f.label :gender, "女性", {value: :女性, style: "display: inline-block;"} %>
          </td>
        </tr>
        <tr>
          <td>生年月日</td>
          <td><%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(1998, 1, 1) %></td>
        </tr>
        <tr>
          <td>プロフィール画像</td>
          <td><%= f.file_field :profile_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td>自己紹介文</td>
          <td><%= f.text_area :self_introduction %></td>
        </tr>
      </table>
    <div class="row">
      <%= f.submit '編集内容を保存',class: "btn btn-success col-md-2 offset-sm-3" %>
      <%= link_to '退会する', unsubscribe_users_path,class: "btn btn-danger col-md-2 offset-sm-1" %>
    </div>
    <% end %>
    </div>
  </div>