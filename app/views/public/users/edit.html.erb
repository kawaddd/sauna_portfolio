<div class="container">
  <div class="row">
    <div class="col-md-3 offset-4">
      <h3 class="my-3">会員情報編集</h3>
    </div>
  </div>

  <%= form_with model: @user,url: user_path(current_user) do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :ニックネーム %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :nickname %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :性別 %>
    </div>
    <div class="col-sm-4">
      <%= f.radio_button :gender, :male, checked: true %>
      <%= f.label :gender, "男性", {value: :男性, style: "display: inline-block;"} %>
      <%= f.radio_button :gender, :female %>
      <%= f.label :gender, "女性", {value: :女性, style: "display: inline-block;"} %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :生年月日 %>
    </div>
    <div class="col-sm-4">
      <%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(1998, 1, 1) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :プロフィール画像 %>
    </div>
    <div class="col-sm-4">
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :自己紹介文 %>
    </div>
    <div class="col-sm-4">
      <%= f.text_area :self_introduction %>
    </div>
  </div>
  <%= f.submit '編集内容を保存',class: "btn btn-success col-md-2 offset-sm-3" %>
  <%= link_to '退会する', unsubscribe_users_path,class: "btn btn-danger col-md-2 offset-sm-1" %>
  <% end %>
  </div>
</div>