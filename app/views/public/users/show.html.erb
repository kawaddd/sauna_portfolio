<div class="container" style="height: 500px">
  <div class="row">
    <div class="col-md-2 offset-md-1 bg-light mb-3">
      <h3>マイページ</h3>
    </div>
  </div>
  <div class="row my-3">
    <div>
      <h3 class="font-weight-bold">登録情報</h3>
    </div>
    <div>
      <%#= link_to "編集する", edit_customers_path,class: "btn btn-success ml-3 " %>
    </div>
  </div>
  <div class="form-group row my-3">
      <table class="table-bordered col-md-7 my-3">
        <tr>
          <th class="bg-light" style="width:25%">氏名</th>
          <td><%#= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="bg-light">カナ</th>
          <td><%#= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="bg-light">郵便番号</th>
          <td><%#= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="bg-light">住所</th>
          <td><%#= @customer.address %></td>
        </tr>
        <tr>
          <th class="bg-light">電話番号</th>
          <td><%#= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="bg-light">メールアドレス</th>
          <td><%#= @customer.email %></td>
        </tr>
      </table>
  </div>
  <div class="row my-3">
    <div>
      <h3 class="font-weight-bold">配送先</h3>
    </div>
    <div>
      <%#= link_to "一覧を見る", addresses_path,class: "btn btn-primary ml-3 " %>
    </div>
  </div>
  <div class="row">
    <div>
      <h3 class="font-weight-bold">注文履歴</h3>
    </div>
    <div>
      <%#= link_to "一覧を見る", orders_path,class: "btn btn-primary ml-3 " %>
    </div>
  </div>
</div>