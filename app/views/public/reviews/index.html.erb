<div class="container" style="height: 500px">
  <div class="row">
    <div class="col-md-3 offset-md-1 mb-3">
      <h3><%= @sauna.store_name %>の口コミ一覧(全<%= @reviews.count %>件)</h3>
    </div>
  </div>
  <div class="row">
      <% @reviews.each do |review| %>
        <div class="col-md-6">
          <%= link_to user_path(review.user) do %>
            <% if review.user.profile_image.attached? %>
              <%= image_tag review.user.profile_image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-6">
          <div><%= review.user.nickname %></div>
          <div><%= review.headline %></div>
          <div><%= review.text %></div>
          <div><%= review.visit_day %></div>
          <div id="score-rate<%= review.id%>">
            <script>
              $('#score-rate<%= review.id %>').empty();
              $('#score-rate<%= review.id %>').raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= review.score %>,
              });
            </script>
          </div>
          <% if review.user_id == current_user.id %>
            <div><%= link_to '口コミを編集する', edit_sauna_review_path(review.sauna_id,review.id) %></div>
          <% end %>
          <% unless review.user_id == current_user.id %>
            <% if review.liked_by?(current_user) %>
                 <!--一致するレコードが存在する＝すでにいいね済みの場合はdestroyアクションへ-->
                <%= link_to sauna_likes_path(review_id: review.id, sauna_id: @sauna), method: :delete do %>
                    <span style="color:red;">❤︎</span>
                <% end %>
            <% else %>
                 <!--一致するレコードが存在しない＝まだいいねしていない場合はcreateアクションへ-->
                <%= link_to sauna_likes_path(review_id: review.id, sauna_id: @sauna), method: :post do %>
                    <span>︎︎♡</span>
                <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
