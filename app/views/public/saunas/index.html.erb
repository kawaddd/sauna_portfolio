<div class="container" style="height: 500px">
  <div class="row">
    <div class="col-md-3 offset-md-1 mt-3">
      <h3>
        <strong>〇〇のサウナ(全<%= Sauna.all.count %>件)</strong>
        <!--〇〇には検索したエリアを入れる-->
      </h3>
    </div>
  </div>
  <!--<div>-->
  <!--  <ul style="list-style: none;">-->
  <!--    <li>ランキング</li>-->
  <!--    <li>口コミ数</li>-->
  <!--    <li>ニューオープン</li>-->
  <!--  </ul>-->
  <!--</div>-->
  <!--13~17どうやって出すか未定-->
  <div class="row">
    <% @saunas.each do |sauna| %>
　　　<div class="col-md-3">
        <%= link_to sauna_path(sauna) do %>
        　<% if sauna.store_image.attached? %>
            <%= image_tag sauna.store_image, size: "200x200" %>
        　<% else %>
            <%= image_tag 'no_image', size: "200x200" %>
        　<% end %>
        <% end %>
        <p><%= sauna.store_name  %></p>
        <!--modal windowで口コミのフォームを出す-->
        <!--サウナのブックマーク機能-->
        <% if sauna.bookmarked_by?(current_user) %>
          <td><%= link_to "ブックマークを外す", sauna_bookmarks_path(sauna), method: :delete %></td>
        <% else %>
          <td><%= link_to "ブックマーク", sauna_bookmarks_path(sauna), method: :post %></td>
        <% end %>
　　　</div>
    <% end %>
  </div>
</div>




<%= form_with model: @review,local:true,url: reviews_path do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :headline, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.label :本文 %>
    <%= f.text_area :text, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>

