<div class="container">
  <div class="row mb-3">
    <div class="col-3">
      <h3>サウナ一覧(全<%= @count %>件)</h3>
    </div>
    <div class="col-2 offset-7">
      <h3 class="corner-color"><%= link_to "新規登録", new_admin_sauna_path %></h3>
    </div>
  </div>


  <div class="row">
    <table class="col-12">
      <thead>
        <tr>
          <th>サウナID</th>
          <th>店名</th>
          <th>店舗画像</th>
          <th>電話番号</th>
          <th>住所</th>
        </tr>
      </thead>
      <tbody>
        <% @saunas.each do |sauna| %>
        <tr>
          <td><%= sauna.id %></td>
          <td><%= link_to sauna.store_name, admin_sauna_path(sauna.id)%></td>
          <td>
            <%= link_to admin_sauna_path(sauna.id) do %>
              <% if sauna.store_image.attached? %>
                <%= image_tag sauna.store_image, size: "70x50" %>
              <% else %>
                <%= image_tag 'no_image', size: "70x50" %>
              <% end %>
            <% end %>
          </td>
          <td><%= sauna.phone_number %></td>
          <td><%= sauna.address %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @saunas %>