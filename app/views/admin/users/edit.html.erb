<div class="container">
  <div class="row">
  <div class="col-md-1"></div>
  <h3><%= @user.nickname %>さんの会員情報編集</h3>
  </div>

  <div class="row">
    <div class="col-md-12">
    <%= form_with model: @user,url: admin_user_path(@user.id) do |f| %>
      <table>
        <tr>
          <td>会員ID</td>
          <td><%= f.number_field :id %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= f.text_field :nickname %></td>
        </tr>
        <tr>
          <td>プロフィール画像</td>
          <td><%= f.file_field :profile_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td>自己紹介文</td>
          <td><%= f.text_area :self_introduction %></td>
        </tr>
        <tr>
          <td>生年月日</td>
          <td><%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(1998, 1, 1) %></td>
        </tr>
        <tr>
          <td>性別</td>
          <td>
            <%= f.radio_button :gender, :male, checked: true %>
            <%= f.label :gender, "男性", {value: :男性, style: "display: inline-block;"} %>
            <%= f.radio_button :gender, :female %>
            <%= f.label :gender, "女性", {value: :女性, style: "display: inline-block;"} %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><%= f.radio_button "is_active", true %>有効<%= f.radio_button "is_active", false %>退会</td>
        </tr>
      </table>
    <%= f.submit '変更を保存' %>
    <% end %>
    </div>
  </div>