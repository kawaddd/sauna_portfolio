<div class="container">
  <div class="row">
    <div class="col-md-10 offset-2">
      <h3 class="my-3"><%= @user.nickname %>さんの会員情報編集</h3>
    </div>
  </div>

  <%= form_with model: @user,url: admin_user_path(@user.id) do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :会員id %>
    </div>
    <div class="col-sm-4">
      <%= f.number_field :id %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :ニックネーム %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :nickname %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :プロフィール画像 %>
    </div>
    <div class="col-sm-4">
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :自己紹介文 %>
    </div>
    <div class="col-sm-4">
      <%= f.text_area :self_introduction, size: "50x2" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :生年月日 %>
    </div>
    <div class="col-sm-4">
      <%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(1998, 1, 1) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :性別 %>
    </div>
    <div class="col-sm-4">
      <%= f.radio_button :gender, :male, checked: true %>
      <%= f.label :gender, "男性", {value: :男性, style: "display: inline-block;"} %>
      <%= f.radio_button :gender, :female %>
      <%= f.label :gender, "女性", {value: :女性, style: "display: inline-block;"} %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-2">
      <%= f.label :会員ステータス %>
    </div>
    <div class="col-sm-3">
      <%= f.radio_button "is_active", true %>有効<%= f.radio_button "is_active", false %>退会
    </div>
    <div class="col-sm-4">
      <%= f.submit '編集内容を保存',class: "btn btn-success" %>
    </div>
  </div>

  <% end %>
</div>