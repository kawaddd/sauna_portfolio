<div class="container">
  <div class="row">
  <div class="col-md-1"></div>
  <h3>会員一覧</h3>
  </div>

  <div class="row">
    <table class="col-12">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id  %></td>
          <td><%= link_to user.nickname, admin_user_path(user.id)%></td>
          <td><%= user.email %></td>
          <% if user.is_active == true %>
          <td>有効</td>
          <% else %>
          <td>退会</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%#= paginate @users %>